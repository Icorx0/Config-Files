# --- Catppuccin Mocha for Zathura ---

# Completion bar (e.g., when using ':')
set completion-group-bg        '#45475a'  # Surface1
set completion-group-fg        '#cdd6f4'  # Text
set completion-bg              '#1e1e2e'  # Base
set completion-fg              '#cdd6f4'  # Text
set completion-highlight-bg    '#89b4fa'  # Blue
set completion-highlight-fg    '#1e1e2e'  # Base

# Notifications and Messages
set notification-error-bg      '#1e1e2e'  # Base
set notification-error-fg      '#f38ba8'  # Red
set notification-warning-bg    '#1e1e2e'  # Base
set notification-warning-fg    '#f9e2af'  # Yellow
set notification-bg            '#1e1e2e'  # Base
set notification-fg            '#89b4fa'  # Blue

# Input bar and Status bar
set inputbar-bg                '#1e1e2e'  # Base
set inputbar-fg                '#cdd6f4'  # Text
set statusbar-bg               '#1e1e2e'  # Base
set statusbar-fg               '#cdd6f4'  # Text

# Index/Table of Contents
set index-bg                   '#1e1e2e'  # Base
set index-fg                   '#cdd6f4'  # Text
set index-active-bg            '#313244'  # Surface0
set index-active-fg            '#cdd6f4'  # Text

# Document Highlighting
set highlight-color            '#a6e3a1'  # Green
set highlight-active-color     '#f9e2af'  # Yellow

# Main Document View & Recolor
set default-bg                 '#181825'  # Mantle (color around the page)
set default-fg                 '#cdd6f4'  # Text
# Used when 'recolor' is active
set recolor-lightcolor         '#1e1e2e'  # Base (document background)
set recolor-darkcolor          '#cdd6f4'  # Text (document text)

# Font for the UI (status bar, etc.)
set font                       'JetBrainsMonoNerdFontMono Regular 10'

# Keymapping for recoloring (dark mode)
map i recolor
